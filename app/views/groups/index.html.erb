<div class="clo-md-12">
  <div class="group">
    <%= link_to("New Movie", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Director </th>
        <th> Stars </th>
        <th> Synopsis </th>
        <th> Creator </th>
      </tr>
    </thead>

    <tbody>
      <%= render :partial => "group_item", :collection => @group, :as => :group %>
    </tbody>
  </table>
</div>
